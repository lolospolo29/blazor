@page "/"

<PageTitle>Trading Dashboard</PageTitle>

<div class="trading-dashboard">
    <header class="hero">
        <h1>Trading Strategy Manager</h1>
        <p>Configure, monitor, and optimize your trading strategies in real-time.</p>
        <button class="cta">Create New Strategy</button>
    </header>
    
    <section class="market-summary">
        <h2>Market Overview</h2>
        <div class="market-data">
            <div class="stock">
                <h3>NASDAQ</h3>
                <p>14,789.32 <span class="up">+1.32%</span></p>
            </div>
            <div class="stock">
                <h3>S&P 500</h3>
                <p>4,517.68 <span class="down">-0.45%</span></p>
            </div>
            <div class="stock">
                <h3>Bitcoin</h3>
                <p>$45,678 <span class="up">+2.1%</span></p>
            </div>
        </div>
    </section>
    
    <section class="strategy-management">
        <h2>Strategy Configuration</h2>
        <p>Define and tweak your trading algorithms.</p>
        <button class="cta">Manage Strategies</button>
    </section>
    
    <section class="analytics">
        <h2>Performance Analytics</h2>
        <p>Track the effectiveness of your strategies with real-time data.</p>
    </section>
</div>

<style>
.trading-dashboard {
    font-family: Arial, sans-serif;
    text-align: center;
    padding: 20px;
    background-color: #121212;
    color: #d7d7d7;
}
.hero {
    background: #1e1e1e;
    color: white;
    padding: 50px;
    border-radius: 10px;
}
.cta {
    background: #ff9800;
    color: white;
    border: none;
    padding: 10px 20px;
    font-size: 18px;
    cursor: pointer;
    margin-top: 10px;
    border-radius: 5px;
}
.market-summary, .strategy-management, .analytics {
    margin-top: 30px;
}
.market-data {
    display: flex;
    justify-content: center;
    gap: 20px;
}
.stock {
    background: #1e1e1e;
    padding: 15px;
    border-radius: 8px;
    border: 1px solid #444;
    color: #d7d7d7;
}
.up { color: #00ff00; }
.down { color: #ff4c4c; }
</style>
